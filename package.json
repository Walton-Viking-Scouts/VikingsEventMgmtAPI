{
  "name": "vikings-osm-backend",
  "version": "1.1.0",
  "description": "Backend API for Vikings OSM Event Manager with rate limiting and OAuth",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "echo 'No build step needed'",
    "install:prod": "npm install --omit=dev",
    "lint": "eslint .",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "test:ci": "NODE_ENV=test jest --ci --coverage --watchAll=false",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version",
    "build:release": "npm run build && npm run sentry:sourcemaps",
    "sentry:sourcemaps": "echo 'No source maps needed for Node.js backend'",
    "release:create": "npx @sentry/cli releases new vikings-osm-backend@$npm_package_version",
    "release:finalize": "npx @sentry/cli releases finalize vikings-osm-backend@$npm_package_version",
    "release:deploy": "npx @sentry/cli releases set-commits vikings-osm-backend@$npm_package_version --auto",
    "release:patch": "npm run test && npm run version:patch",
    "release:minor": "npm run test && npm run version:minor",
    "release:major": "npm run test && npm run version:major"
  },
  "keywords": [
    "osm",
    "onlinescoutmanager",
    "api",
    "backend",
    "oauth",
    "rate-limiting"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@sentry/node": "^9.33.0",
    "@sentry/profiling-node": "^9.33.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@sentry/cli": "^2.51.1",
    "eslint": "^9.30.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
