{
  "testEnvironment": "node",
  "collectCoverageFrom": [
    "server.js",
    "!node_modules/**",
    "!coverage/**",
    "!__tests__/**"
  ],
  "testMatch": [
    "**/__tests__/**/*.test.js"
  ],
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/coverage/"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": ["text", "lcov", "html"],
  "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
  "testTimeout": 15000,
  "verbose": true,
  "forceExit": true,
  "detectOpenHandles": true,
  "maxWorkers": 1
}